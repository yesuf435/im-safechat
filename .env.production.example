# SafeChat Production Environment Configuration
# Copy this file to .env and update the values for your production environment

# MongoDB Configuration
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=change_this_to_a_secure_password
MONGO_INITDB_DATABASE=safechat

# Backend Configuration
MONGODB_URI=mongodb://admin:change_this_to_a_secure_password@mongodb:27017/safechat?authSource=admin
JWT_SECRET=change_this_to_a_long_random_string
PORT=3001

# CORS Configuration
# For production, specify exact origins (comma-separated)
# Example: ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=*

# Optional: Enable Boss/Admin Panel
# ENABLE_BOSS=true
