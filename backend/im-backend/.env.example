# ================================
# SafeChat IM 后端环境配置
# ================================

# 服务器端口
PORT=3001

# MongoDB 连接
MONGODB_URI=mongodb://localhost:27017/safechat

# JWT 密钥（生产环境务必修改）
JWT_SECRET=your_super_secret_jwt_key

# 跨域配置（多个用逗号分隔）
ALLOWED_ORIGINS=*

# 文件上传限制（MB）
MAX_FILE_SIZE=10

# 超级管理员面板
ENABLE_BOSS=false

# 环境模式
NODE_ENV=development
